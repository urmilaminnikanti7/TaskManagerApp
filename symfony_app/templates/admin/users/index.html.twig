{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people-fill"></i> Manage Users</h2>
            <a href="{{ path('admin_user_create') }}" class="btn btn-primary">
                <i class="bi bi-person-plus-fill"></i> Create Users
            </a>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-success btn-lg shadow-sm">âœ… Dashboard</a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg shadow-sm">ðŸšª Logout</a>
        </div>

        <div class="card shadow-sm rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endfor %}
                            </td>
                            <td class="text-end">
                                <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form action="{{ path('admin_user_delete', {id: user.id}) }}" method="POST" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">No users found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
