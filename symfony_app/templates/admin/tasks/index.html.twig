{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-list-task"></i> Manage Tasks</h2>
            <a href="{{ path('admin_task_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create Task
            </a>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-success btn-lg shadow-sm">âœ… Dashboard</a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg shadow-sm">ðŸšª Logout</a>
        </div>

        <div class="card shadow-sm rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>User</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks %}
                        <tr>
                            <td>{{ task.id }}</td>
                            <td>{{ task.title }}</td>
                            <td>{{ task.description }}</td>
                            <td>
                                {% if task.status == 'todo' %}
                                    <span class="badge bg-secondary">To Do</span>
                                {% elseif task.status == 'in_progress' %}
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                {% elseif task.status == 'done' %}
                                    <span class="badge bg-success">Done</span>
                                {% endif %}
                            </td>
                            <td>{{ task.user.name }}</td>
                            <td class="text-end">
                                <a href="{{ path('admin_task_edit', {id: task.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form action="{{ path('admin_task_delete', {id: task.id}) }}" method="POST" style="display:inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                    <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No tasks found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
