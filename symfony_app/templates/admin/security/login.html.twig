{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100"
         style="background: linear-gradient(135deg, #4e73df, #1cc88a);">

        <div class="card shadow-lg rounded-4 p-5" style="width: 400px;">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Admin Login</h2>
                <p class="text-muted small">Please enter your credentials</p>
            </div>

            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="mt-3">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="inputEmail" name="email"
                           value="{{ last_username }}" placeholder="name@example.com" required autofocus>
                    <label for="inputEmail">Email address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="inputPassword" name="password"
                           placeholder="Password" required>
                    <label for="inputPassword">Password</label>
                </div>

                <button class="btn btn-primary w-100 py-2 shadow-sm" type="submit">
                    🔐 Login
                </button>
            </form>
        </div>
    </div>
{% endblock %}
